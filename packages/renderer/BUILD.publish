exports_files(glob(["**/*.bzl"]), visibility = ["//visibility:public"])

# `prerender_resources()` needs a label reference to the entry point file.
# Needs to use the version under `@npm//:node_modules/` so it is in the
# same source tree as the rest of the NPM module and relative imports work.
alias(
    name = "renderer.js",
    actual = "@npm//:node_modules/rules_prerender/packages/renderer/renderer.js",
    visibility = ["//visibility:public"],
)
