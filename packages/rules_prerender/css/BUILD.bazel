load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

bzl_library(
    name = "css_binaries",
    srcs = ["css_binaries.bzl"],
    visibility = ["//packages/rules_prerender:__pkg__"],
    deps = [
        ":css_group",
        ":css_map",
        ":css_providers",
        "//packages/rules_prerender:postcss_import_plugin",
    ],
)

bzl_library(
    name = "css_group",
    srcs = ["css_group.bzl"],
    visibility = [
        "//:__pkg__",
        "//packages/rules_prerender:__pkg__",
    ],
    deps = [":css_providers"],
)

bzl_library(
    name = "css_library",
    srcs = ["css_library.bzl"],
    visibility = ["//:__pkg__"],
    deps = [":css_providers"],
)

bzl_library(
    name = "css_map",
    srcs = ["css_map.bzl"],
    deps = [":css_providers"],
)

bzl_library(
    name = "css_providers",
    srcs = ["css_providers.bzl"],
    visibility = ["//packages/rules_prerender:__pkg__"],
)
