load(
    "//packages/rules_prerender:prerender_component.bzl",
    "prerender_component",
)
load(
    "//packages/rules_prerender:prerender_component_publish_files.bzl",
    "prerender_component_publish_files",
)
load("//packages/rules_prerender:web_resources.bzl", "web_resources")
load("//packages/rules_prerender/css:css_library.bzl", "css_library")
load("//tools:jasmine.bzl", "jasmine_node_test")
load("//tools:typescript.bzl", "ts_project")

prerender_component(
    name = "component",
    srcs = ["component.ts"],
    lib_deps = [":prerender_dep"],
    scripts = [":scripts"],
    styles = [":styles"],
    resources = [":resources"],
)

ts_project(
    name = "prerender_dep",
    srcs = ["prerender_dep.ts"],
)

ts_project(
    name = "scripts",
    srcs = ["script.ts"],
    deps = [":script_dep"],
)

css_library(
    name = "styles",
    srcs = ["style.css"],
)

ts_project(
    name = "script_dep",
    srcs = ["script_dep.ts"],
)

web_resources(
    name = "resources",
    entries = {
        "/resource.txt": "resource.txt",
    },
)

prerender_component_publish_files(
    name = "component_publish_files",
    dep = ":component",
    visibility = ["//packages/rules_prerender:__pkg__"],
)
