# .bazelrc configuration for CI jobs.

# Cache to a path maintained by the CI runner.
build --disk_cache ~/.gh-actions-cache/bazel/

# Tweak the UI to work better with the GitHub log viewer.
build --show_progress_rate_limit 5 --curses yes --color yes --terminal_columns 140 --show_timestamps --verbose_failures --announce_rc

# Profile the build.
build --profile bazel.profile.gz --experimental_generate_json_trace_profile --experimental_profile_cpu_usage --experimental_json_trace_compression
