load("//:index.bzl", "css_library", "web_resources")
load("//packages/rules_prerender:prerender_component2.bzl", "prerender_component")
load("//tools/typescript:defs.bzl", "ts_project")

# TODO: `empty_genquery_test()` under `prerender_pages()` that nothing else has
# a direct dependency on `:prerender` and `:scripts` besides
# `:component_prerender` and `:component_scripts`?
prerender_component(
    name = "component",
    prerender = ":prerender",
    scripts = ":scripts",
    styles = ":styles",
    resources = ":resources",
    visibility = ["//examples/rewrite:__subpackages__"],
)

ts_project(
    name = "prerender",
    srcs = ["component.prerender.tsx"],
    deps = [
        "//:node_modules/@rules_prerender/preact",
        "//:node_modules/preact",
        "//:prerender_components/@rules_prerender/declarative_shadow_dom_prerender",
    ],
)

ts_project(
    name = "scripts",
    srcs = ["component.client.mts"],
    deps = ["//examples/rewrite/transitive:transitive_scripts"],
)

css_library(
    name = "styles",
    srcs = ["component.css"],
)

web_resources(
    name = "resources",
    entries = {
        "/logo.png": "image.png",
    },
)
