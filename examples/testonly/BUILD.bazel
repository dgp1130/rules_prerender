load("@aspect_bazel_lib//lib:copy_to_bin.bzl", "copy_to_bin")
load("@bazel_skylib//rules:build_test.bzl", "build_test")
load(
    "//:index.bzl",
    "css_library",
    prerender_pages = "prerender_pages2",
    "web_resources",
    "web_resources_devserver",
)
load("//tools/typescript:defs.bzl", "ts_project")

copy_to_bin(
    name = "package",
    srcs = ["package.json"],
)

prerender_pages(
    name = "site",
    entry_point = "./site.js",
    prerender = ":prerender",
    scripts = ":scripts",
    styles = ":styles",
    resources = ":resources",
    testonly = True,
)

ts_project(
    name = "prerender",
    srcs = ["site.tsx"],
    # Need `"type": "module"` to load `*.js` files output by `*.tsx` compilation.
    data = [":package"],
    testonly = True,
    deps = [
        "//examples/testonly/component:component_prerender",
        "//:node_modules/@rules_prerender/preact",
        "//:node_modules/preact",
    ],
)

css_library(
    name = "styles",
    srcs = ["site_styles.css"],
    testonly = True,
)

ts_project(
    name = "scripts",
    srcs = ["site_script.mts"],
    testonly = True,
)

web_resources(
    name = "resources",
    entries = {
        "/images/site.png": "image.png",
    },
    testonly = True,
)

web_resources_devserver(
    name = "devserver",
    resources = ":site",
    testonly = True,
)

build_test(
    name = "test",
    targets = [":devserver"],
)
