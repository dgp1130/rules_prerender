load("@npm//@bazel/typescript:index.bzl", "ts_devserver", "ts_library")
load("//packages/rules_prerender:index.bzl", "prerender_page_bundled")
load("//tools:jasmine.bzl", "jasmine_node_test")

prerender_page_bundled(
    name = "page",
    src = "page.ts",
    lib_deps = ["//packages/rules_prerender"],
    scripts = [":script"],
    deps = ["//examples/scripts/component"],
)

ts_library(
    name = "script",
    srcs = ["script.ts"],
)

genrule(
    name = "index_rename",
    srcs = ["page.html"],
    outs = ["index.html"],
    cmd = """
        cp $< $@
    """,
)

ts_devserver(
    name = "devserver",
    static_files = [
        "index.html",
        "page_bundle.js", # From :page
    ],
)

ts_library(
    name = "test_lib",
    srcs = ["test.ts"],
    testonly = True,
    deps = [
        "//common:runfiles",
        "//common/testing:devserver",
        "//common/testing:puppeteer",
        "@npm//@types/jasmine",
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "test",
    data = [
        ":devserver",
        "@npm//puppeteer",
    ],
    deps = [":test_lib"],
)
