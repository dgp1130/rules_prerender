load("@npm//@bazel/typescript:index.bzl", "ts_library")
load("//:index.bzl", "css_module", "prerender_pages", "web_resources_devserver")
load("//tools:jasmine.bzl", "jasmine_node_test")

prerender_pages(
    name = "page",
    src = "page.ts",
    css_modules = [":styles"],
    lib_deps = ["//packages/rules_prerender"],
    bundle_js = False, # Optimization: No client-side JavaScript on this page.
    deps = ["//examples/styles/component"],
)

css_module(
    name = "styles",
    srcs = ["page.css"],
)

web_resources_devserver(
    name = "devserver",
    resources = ":page",
)

ts_library(
    name = "test_lib",
    srcs = ["test.ts"],
    testonly = True,
    deps = [
        "//common:runfiles",
        "//common/testing:devserver",
        "//common/testing:puppeteer",
        "@npm//@types/jasmine",
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "test",
    data = [":devserver"],
    deps = [":test_lib"],
)
