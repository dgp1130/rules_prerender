load("//:index.bzl", "prerender_pages")
load("//tools/jasmine:defs.bzl", "jasmine_node_test")
load("//tools/typescript:defs.bzl", "ts_project")

prerender_pages(
    name = "blog",
    src = "blog.tsx",
    tsconfig = "//:tsconfig",
    source_map = True,
    data = glob(["posts/*.md"]) + [
