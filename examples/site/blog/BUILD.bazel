    name = "blog_test_lib",
    srcs = ["blog_test.mts"],
    testonly = True,
    data = ["//:node_modules/node-html-parser"],
    deps = [
        ":blog_prerender_for_test",
        "//:node_modules/@types/jasmine",
        "//:node_modules/node-html-parser",
    ],
