ts_project(
    name = "blog_test_lib",
    srcs = ["blog_test.ts"],
    testonly = True,
    data = ["//:node_modules/node-html-parser"],
    deps = [
        ":blog_prerender_for_test",
        "@npm//@types/jasmine",
        "@npm//node-html-parser",
    ],
