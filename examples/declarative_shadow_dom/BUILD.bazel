load("@npm//@bazel/concatjs:index.bzl", "ts_library")
load(
    "//:index.bzl",
    "css_library",
    "prerender_component",
    "prerender_pages",
    "web_resources_devserver",
)
load("//tools:jasmine.bzl", "jasmine_web_test_suite")

prerender_pages(
    name = "site",
    src = "site.ts",
    lib_deps = ["//packages/rules_prerender"],
    deps = [":component"],
)

prerender_component(
    name = "component",
    srcs = ["component.ts"],
    inline_styles = [":styles"],
    lib_deps = ["//packages/rules_prerender"],
    deps = ["//:declarative_shadow_dom"],
)

css_library(
    name = "styles",
    srcs = ["component.css"],
)

web_resources_devserver(
    name = "devserver",
    resources = ":site",
)

ts_library(
    name = "test_lib",
    srcs = ["test.ts"],
    data = [":devserver"],
    testonly = True,
    deps = [
        "//common/testing:devserver",
        "//common/testing:webdriver",
        "@npm//@bazel/runfiles",
        "@npm//@types/jasmine",
    ],
)

jasmine_web_test_suite(
    name = "test",
    browsers = ["//tools/browsers:chromium-local"],
    deps = [":test_lib"],
)
